	$(AM_CFLAGS_@VGCONF_PLATFORM_PRI_CAPS@) $(AM_CFLAGS_PIC)
vgpreload_memview_@VGCONF_ARCH_PRI@_@VGCONF_OS@_so_DEPENDENCIES = \
	$(LIBWRAPMALLOC_@VGCONF_PLATFORM_PRI_CAPS@)
vgpreload_memview_@VGCONF_ARCH_PRI@_@VGCONF_OS@_so_LDFLAGS      = \
	$(PRELOAD_LDFLAGS_@VGCONF_PLATFORM_PRI_CAPS@) \
	$(LIBWRAPMALLOC_LDFLAGS_@VGCONF_PLATFORM_PRI_CAPS@)

